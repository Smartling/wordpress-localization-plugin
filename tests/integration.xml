<phpunit
        bootstrap="./IntegrationTests/includes/bootstrap.php"
        backupGlobals="false"
        colors="true"
        beStrictAboutTestsThatDoNotTestAnything="true"
>
    <php>
        <const name="WP_TESTS_MULTISITE" value="1" />
    </php>
    <testsuites>
        <testsuite name="smartling-connector WordPress integration test">
            <directory suffix="Test.php" phpVersion="5.5.0" phpVersionOperator=">=">./IntegrationTests/tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="junit" target="log-integration.xml" logIncompleteSkipped="false"/>
        <!--<log type="coverage-clover" target="integration-coverage.xml"/>-->
    </logging>
</phpunit>