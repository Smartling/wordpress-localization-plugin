<phpunit
        bootstrap="./IntegrationTests/includes/bootstrap.php"
        backupGlobals="false"
        colors="true"
        beStrictAboutTestsThatDoNotTestAnything="true"
>
    <php>
        <const name="WP_TESTS_MULTISITE" value="1" />
    </php>
    <testsuites>
        <testsuite name="smartling-connector WordPress integration test">
            <directory suffix="Integration.php" phpVersion="5.5.0" phpVersionOperator=">=">./IntegrationTests/tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="junit" target="logfile.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>